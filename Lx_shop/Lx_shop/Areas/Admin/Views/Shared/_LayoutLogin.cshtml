    <script src="~/Content/plugins/iCheck/icheck.min.js"></script>
    <!--Main Js-->
    <script src="~/Scripts/MainJs/mainJs.js"></script>
    <!--Toastr Js-->
    <script src="~/Scripts/toastr.js"></script>
    <!--Validate_register-->
    <script src="~/Scripts/Validate/Validate.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */

            });
            var checkbox = document.querySelector('.icheckbox_square-blue #checkbox_tg');
            console.log(checkbox);
            checkbox.onclick = function () {
                console.log('a');
            }
        });
        Validator({
            form: "#form-register",
            errorSelector: '.form-message',
            rules: [
                Validator.isRequired('#user_name_register', 'Vui lòng nhập tên đăng nhập !'),
                Validator.isUser('#user_name_register'),
                Validator.isRequired('#email_register', 'Vui lòng nhập email !'),
                Validator.isEmail('#email_register'),
                Validator.isRequired('#phone_register', 'Vui lòng nhập số điện thoại !'),
                Validator.isPhone("#phone_register"),
                Validator.isRequired('#password_register', 'Vui lòng nhập mật khẩu !'),
                Validator.isPass('#password_register'),
                Validator.isRequired('#repass_register', 'Vui lòng nhập lại mật khẩu !'),
                Validator.isRe_pass('#repass_register', function () {
                    return document.querySelector('#form-register #password_register').value;
                }, 'Mật khẩu nhập lại không chính xác'),
                Validator.isRequired('#display_name_register', 'Vui lòng nhập tên hiển thị !'),

            ]
        });
        //show/Hide password
        var password = document.querySelector('#password_register');
        var toggle = document.querySelector('#toggle');
        
        toggle.onclick = function () {
            // console.log('a');
            if (password.type === "password") {
                password_register.setAttribute("type", "text")
                toggle.classList.add('glyphicon-eye-close');
            }
            else {
                password_register.setAttribute('type', 'password');
                toggle.classList.remove('glyphicon-eye-close');
            }
        }
        var repassword = document.querySelector('#repass_register');
        var retoggle = document.querySelector('#re_toggle');
        retoggle.onclick = function () {
            //console.log('a');
            if (repassword.type === "password") {
                repass_register.setAttribute("type", "text")
                re_toggle.classList.add('glyphicon-eye-close');
            }
            else {
                repass_register.setAttribute('type', 'password');
                re_toggle.classList.remove('glyphicon-eye-close');
            }
        }
        var checkbox = document.querySelector('#checkbox_tg');
        checkbox.onclick = function () {
            if (checkbox.checked === true) {
                console.log('a');
            }
        }

    </script>

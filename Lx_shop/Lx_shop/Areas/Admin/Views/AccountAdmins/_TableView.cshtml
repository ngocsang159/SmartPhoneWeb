@model IPagedList<LxShop.Models.EF.AccountAdmin>
@using PagedList
@using LxShop.Commons
@using LxShop.Models.EF
@using PagedList.Mvc
@using LxShop.Models
@{
    AccountAdmin search = ViewBag.AccountAdmin as AccountAdmin;
}
<table class="table table-hover table-bordered mentos">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Username)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.First().Password)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>*@

        <th>
            @Html.DisplayNameFor(model => model.First().Displayname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Phone)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.First().Facebook)
            </th>*@
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.First().Email)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.First().Address)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.First().Status)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.First().CreateDate)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.First().CreateBy)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.First().UpdatedDate)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.First().UpdatedBy)
            </th>*@

        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.Avatar)
                </td>*@

            <td>
                @Html.DisplayFor(modelItem => item.Displayname)
            </td>
            <td>
                @if (item.Gender == 1)
                {
                    <span>Nam</span>
                }
                else
                {
                    <span>Nữ</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Facebook)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>*@
            <td>
                @*@Html.DisplayFor(modelItem => item.Status)*@
                @if (item.Status == 1)
                {
                    <span class="label label-success">Active</span>
                }
                else
                {
                    <span class="label label-danger">Locked</span>
                }

            </td>

            @*<td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.CreateBy)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>*@

            <td class="box-right">
                <div class="box-over">
                    <div class="setting-row" data-show-box="0" onclick="showBoxFunction(this)">
                        <i class="fa fa-cog"></i>
                    </div>

                    <div class="function-item list-to-left d-none">
                        <ul class="list-function">
                            <li> <button class="btn btn-success style-button" onclick="Edit_Ad('@item.ID')"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></li>
                            <li><button class="btn btn-primary  style-button" onclick="GetDetails_Ad('@item.ID')"><i class="fa fa-info-circle" aria-hidden="true"></i></button></li>
                            <li><button class="btn btn-danger style-button" onclick="Delete_Ad('@item.ID')"><i class="fa fa-trash-o" aria-hidden="true"></i></button></li>
                        </ul>
                    </div>
                </div>
            </td>
        </tr>
        <tr style="display:none" id="info">
            <td>Không có thông tin cần tìm kiếm !</td>
        </tr>

    }

</table>
@Html.PagedListPager(Model, page => Url.Action("_TableView", "AccountAdmins", search.SetInfoPagging(page)), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "content-view"

}))


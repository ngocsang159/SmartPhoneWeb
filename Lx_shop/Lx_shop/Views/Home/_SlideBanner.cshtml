@model LxShop.Models.EF.BannerModel
@using LxShop.Models.EF
@{ 
    var lstBanner = ViewBag.BannerModel as List<BannerModel>;
}

<div class="col-lg-9">
    <div class="slider-area pt-sm-30 pt-xs-30">
        <div class="slider-active owl-carousel">
            <!-- Begin Single Slide Area -->
            @foreach (var item in lstBanner)
            {
                if (item.banner.Banner_Name != "Banner" && item.banner.Banner_Type == 1)
                {
                    var url = "chi-tiet-san-pham/" + item.product.Product_Id;
                    decimal moneyValueSale = 0;
                    decimal moneyValue = 0;
                    if (item.product.Price != null)
                    {
                        moneyValueSale = (decimal)item.product.Price;
                    }
                    else
                    {
                        moneyValue = (decimal)item.product.Original_Price;
                    }
                    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                    string moneyValueSales = String.Format(info, "{0:C}", moneyValueSale);
                    string moneyValues = String.Format(info, "{0:C}", moneyValue);
            <div class="single-slide align-center-left animation-style-02 bg-4">
                <div class="slider-progress"></div>
                <div class="bg-6" style="background-image:url(@item.banner.Banner_Image)"></div>
                <div class="slider-content">
                    @if (item.product.Price != null)
                    {
                        <h5>Giảm giá <span>-20% Off</span></h5>
                    }
                    else
                    {

                    }

                    <h2>@item.banner.Banner_Name</h2>
                    @if (item.product.Price != null)
                    {
                        <h3>Chỉ còn <span>@moneyValueSales</span></h3>
                    }
                    else
                    {
                        <h3>Chỉ còn <span>@moneyValues</span></h3>
                    }

                    <div class="default-btn slide-btn">
                        <a class="links" href="shop-left-sidebar.html">Mua Ngay</a>
                    </div>
                </div>
            </div>
                }
            }

        </div>
    </div>
</div>

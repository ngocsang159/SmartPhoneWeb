@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLoginClient.cshtml";
}

    <form action="" method="POST" class="form" id="form-register-client">
        <h3 class="heading">Đăng Ký Thành Viên</h3>
        <p class="desc">Nơi mua sắm đáng tin cậy - Bạn của mọi nhà ❤️</p>

        <div class="spacer"></div>

        <div class="form-group">
            <label for="Customer_name" class="form-label">Họ và Tên</label>
            <input id="Customer_name" name="Customer_name" type="text" placeholder="VD: Ngọc Sáng" class="form-control">
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="phone" class="form-label">Số điện thoại</label>
            <input id="phone" name="phone" type="text" placeholder="0383515382" class="form-control">
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input id="email" name="email" type="text" placeholder="VD: email@domain.com" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="Password" class="form-label">Mật khẩu</label>
            <input id="Password" name="Password" type="password" placeholder="Nhập mật khẩu" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="password_confirmation" class="form-label">Nhập lại mật khẩu</label>
            <input id="password_confirmation" name="password_confirmation" placeholder="Nhập lại mật khẩu" type="password" class="form-control">
            <span class="form-message"></span>
        </div>

        <button class="form-submit" type="button" id="btnRegister">Đăng Ký</button>
        <div class="policy">
            <span>Bằng việc đăng ký, bạn đã đồng ý với Lx-Mobible về <a href="" class="_1WCser"> Điều khoản và dịch vụ </a> & <a href="" class="_1WCser">Chính sách bảo mật</a></span>
        </div>
        <div class="login">
            <div class="_3SZqDE">
                <span class="_39jZa0">Bạn đã có tài khoản?</span>
                <a href="/HeThong/Login" class="_1gLe-h">Đăng nhập</a>
            </div>
        </div>
    </form>

